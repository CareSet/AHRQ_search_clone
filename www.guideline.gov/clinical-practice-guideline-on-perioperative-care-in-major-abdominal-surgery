 (229912004), <a href="/web/20180712210622/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0031150&amp;fLockTerm=Laparoscopy">Laparoscopy</a>
 (108191006), <a href="/web/20180712210622/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0031150&amp;fLockTerm=Laparoscopy">Laparoscopy</a>
 (73632009), <a href="/web/20180712210622/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0206058&amp;fLockTerm=Optional+surgery">Optional surgery</a>
 (274075007), <a href="/web/20180712210622/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0030688&amp;fLockTerm=Patient+education">Patient education</a>
 (311401005), <a href="/web/20180712210622/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0150706&amp;fLockTerm=Perioperative+care">Perioperative care</a>
 (133897009), <a href="/web/20180712210622/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0032786&amp;fLockTerm=Postoperative+care">Postoperative care</a>
 (133899007), <a href="/web/20180712210622/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C4304804&amp;fLockTerm=Postoperative+recovery+status">Postoperative recovery status</a>
 (719319006), <a href="/web/20180712210622/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0033061&amp;fLockTerm=Preoperative+care">Preoperative care</a>
 (133898004), <a href="/web/20180712210622/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0543467&amp;fLockTerm=Surgical">Surgical</a>
 (257556004), <a href="/web/20180712210622/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0543467&amp;fLockTerm=Surgical">Surgical</a>
 (387713003), <a href="/web/20180712210622/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0543467&amp;fLockTerm=Surgical">Surgical</a>
 (83578000)                    </div>
                    <!-- /.field-content -->
                </div>
                <!-- /.field -->
    </div>
        <!-- /.content-tab-panel -->
            <div id="neats-tab" class="content-tab-panel">
