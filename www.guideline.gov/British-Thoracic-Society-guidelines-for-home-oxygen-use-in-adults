, <a href="/web/20180713090755/https://www.guideline.gov/search?f_MTH_CUI=C0010674&amp;fLockTerm=Cystic+Fibrosis">Cystic Fibrosis</a>
, <a href="/web/20180713090755/https://www.guideline.gov/search?f_MTH_CUI=C0014680&amp;fLockTerm=Equipment+Safety">Equipment Safety</a>
, <a href="/web/20180713090755/https://www.guideline.gov/search?f_MTH_CUI=C0018799&amp;fLockTerm=Heart+Diseases">Heart Diseases</a>
, <a href="/web/20180713090755/https://www.guideline.gov/search?f_MTH_CUI=C0018801&amp;fLockTerm=Heart+failure">Heart failure</a>
, <a href="/web/20180713090755/https://www.guideline.gov/search?f_MTH_CUI=C0019855&amp;fLockTerm=Home+Care+Services">Home Care Services</a>
, <a href="/web/20180713090755/https://www.guideline.gov/search?f_MTH_CUI=C0152171&amp;fLockTerm=Idiopathic+pulmonary+hypertension">Idiopathic pulmonary hypertension</a>
, <a href="/web/20180713090755/https://www.guideline.gov/search?f_MTH_CUI=C0024115&amp;fLockTerm=Lung+diseases">Lung diseases</a>
, <a href="/web/20180713090755/https://www.guideline.gov/search?f_MTH_CUI=C0206062&amp;fLockTerm=Lung+Diseases%2c+Interstitial">Lung Diseases, Interstitial</a>
, <a href="/web/20180713090755/https://www.guideline.gov/search?f_MTH_CUI=C0375111&amp;fLockTerm=Neoplasm+of+unspecified+nature%2c+site+unspecified">Neoplasm of unspecified nature, site unspecified</a>
, <a href="/web/20180713090755/https://www.guideline.gov/search?f_MTH_CUI=C0027651&amp;fLockTerm=Neoplasms">Neoplasms</a>
, <a href="/web/20180713090755/https://www.guideline.gov/search?f_MTH_CUI=C0348712&amp;fLockTerm=Other+disorders+of+lung">Other disorders of lung</a>
, <a href="/web/20180713090755/https://www.guideline.gov/search?f_MTH_CUI=C1619679&amp;fLockTerm=Oximeter">Oximeter</a>
, <a href="/web/20180713090755/https://www.guideline.gov/search?f_MTH_CUI=C0523807&amp;fLockTerm=Oxygen+saturation+measurement">Oxygen saturation measurement</a>
, <a href="/web/20180713090755/https://www.guideline.gov/search?f_MTH_CUI=C0184633&amp;fLockTerm=Oxygen+Therapy+Care">Oxygen Therapy Care</a>
, <a href="/web/20180713090755/https://www.guideline.gov/search?f_MTH_CUI=C0020542&amp;fLockTerm=Pulmonary+Hypertension">Pulmonary Hypertension</a>
, <a href="/web/20180713090755/https://www.guideline.gov/search?f_MTH_CUI=C0035242&amp;fLockTerm=Respiratory+Tract+Diseases">Respiratory Tract Diseases</a>
, <a href="/web/20180713090755/https://www.guideline.gov/search?f_MTH_CUI=C0679247&amp;fLockTerm=Terminal+illness">Terminal illness</a>
                    </div>
                    <!-- /.field-content -->
                </div>
                <!-- /.field -->
                <div class="field">
                    <h5 class="field-label">SNOMEDCT_US</h5>
                    <div class="field-content">
<a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0005800&amp;fLockTerm=Blood+gas+analysis">Blood gas analysis</a>
 (167018008), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0005800&amp;fLockTerm=Blood+gas+analysis">Blood gas analysis</a>
 (278297009), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0024117&amp;fLockTerm=Chronic+obstructive+lung+disease">Chronic obstructive lung disease</a>
 (13645005), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0009088&amp;fLockTerm=Cluster+headache">Cluster headache</a>
 (193031009), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0009088&amp;fLockTerm=Cluster+headache">Cluster headache</a>
 (193947008), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0009088&amp;fLockTerm=Cluster+headache">Cluster headache</a>
 (230473009), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0018802&amp;fLockTerm=Congestive+heart+failure">Congestive heart failure</a>
 (42343007), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0010674&amp;fLockTerm=Cystic+fibrosis">Cystic fibrosis</a>
 (190905008), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0024115&amp;fLockTerm=Disorder+of+lung">Disorder of lung</a>
 (19829001), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0018799&amp;fLockTerm=Heart+disease">Heart disease</a>
 (56265001), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0018801&amp;fLockTerm=Heart+failure">Heart failure</a>
 (84114007), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0206062&amp;fLockTerm=Interstitial+lung+disease">Interstitial lung disease</a>
 (233703007), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0027868&amp;fLockTerm=Myoneural+disorder">Myoneural disorder</a>
 (255522009), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0027868&amp;fLockTerm=Myoneural+disorder">Myoneural disorder</a>
 (257277002), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0027651&amp;fLockTerm=Neoplasm">Neoplasm</a>
 (108369006), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0523807&amp;fLockTerm=Oxygen+saturation+measurement">Oxygen saturation measurement</a>
 (104847001), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0523807&amp;fLockTerm=Oxygen+saturation+measurement">Oxygen saturation measurement</a>
 (264598005), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0184633&amp;fLockTerm=Oxygen+therapy">Oxygen therapy</a>
 (57485005), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0020542&amp;fLockTerm=Pulmonary+hypertension">Pulmonary hypertension</a>
 (70995007), <a href="/web/20180713090755/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0679247&amp;fLockTerm=Terminal+illness">Terminal illness</a>
 (300936002)                    </div>
                    <!-- /.field-content -->
                </div>
