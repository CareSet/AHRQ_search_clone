 (23968004), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0010210&amp;fLockTerm=Counseling">Counseling</a>
 (129441002), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0010210&amp;fLockTerm=Counseling">Counseling</a>
 (409063005), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0400083&amp;fLockTerm=Creation+of+ileal+pouch">Creation of ileal pouch</a>
 (235332005), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0020883&amp;fLockTerm=Creation+of+ileostomy">Creation of ileostomy</a>
 (173977007), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0020883&amp;fLockTerm=Creation+of+ileostomy">Creation of ileostomy</a>
 (301784005), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0023985&amp;fLockTerm=Creation+of+loop+ileostomy">Creation of loop ileostomy</a>
 (249210007), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0023985&amp;fLockTerm=Creation+of+loop+ileostomy">Creation of loop ileostomy</a>
 (314594009), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0010592&amp;fLockTerm=Cyclosporine">Cyclosporine</a>
 (387467008), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0010592&amp;fLockTerm=Cyclosporine">Cyclosporine</a>
 (80906007), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0013216&amp;fLockTerm=Drug+therapy">Drug therapy</a>
 (416608005), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0014243&amp;fLockTerm=Endoscope">Endoscope</a>
 (37270008), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C1270802&amp;fLockTerm=Excision+rectal+mucosal+prolapse">Excision rectal mucosal prolapse</a>
 (387860002), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C1270802&amp;fLockTerm=Excision+rectal+mucosal+prolapse">Excision rectal mucosal prolapse</a>
 (387861003), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0192755&amp;fLockTerm=Ileoanal+anastomosis">Ileoanal anastomosis</a>
 (70172002), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0003250&amp;fLockTerm=Monoclonal+antibody">Monoclonal antibody</a>
 (49616005), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0038898&amp;fLockTerm=Operative+procedure+on+digestive+system">Operative procedure on digestive system</a>
 (107907001), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0032786&amp;fLockTerm=Postoperative+care">Postoperative care</a>
 (133899007), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0400076&amp;fLockTerm=Proctocolectomy">Proctocolectomy</a>
 (174059005), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0400041&amp;fLockTerm=Total+abdominal+colectomy+with+ileoproctostomy">Total abdominal colectomy with ileoproctostomy</a>
 (36192008), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0192871&amp;fLockTerm=Total+colectomy">Total colectomy</a>
 (26390003), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0585532&amp;fLockTerm=Total+colectomy+and+ileostomy">Total colectomy and ileostomy</a>
 (307666008), <a href="/web/20180712205352/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0009324&amp;fLockTerm=Ulcerative+colitis">Ulcerative colitis</a>
 (64766004)                    </div>
                    <!-- /.field-content -->
                </div>
                <!-- /.field -->
