 (225323000), <a href="/web/20180712205445/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0551076&amp;fLockTerm=Sputum+cytology">Sputum cytology</a>
 (168476005), <a href="/web/20180712205445/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0038257&amp;fLockTerm=Stent">Stent</a>
 (65818007), <a href="/web/20180712205445/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0039267&amp;fLockTerm=Talc">Talc</a>
 (1557002), <a href="/web/20180712205445/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0039267&amp;fLockTerm=Talc">Talc</a>
 (409109009), <a href="/web/20180712205445/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0521221&amp;fLockTerm=Thoracoscopic+biopsy+of+lung">Thoracoscopic biopsy of lung</a>
 (66258007), <a href="/web/20180712205445/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0039989&amp;fLockTerm=Thoracoscopy">Thoracoscopy</a>
 (14671001), <a href="/web/20180712205445/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0039989&amp;fLockTerm=Thoracoscopy">Thoracoscopy</a>
 (359726004), <a href="/web/20180712205445/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0039989&amp;fLockTerm=Thoracoscopy">Thoracoscopy</a>
 (472818003), <a href="/web/20180712205445/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0041618&amp;fLockTerm=Ultrasonography">Ultrasonography</a>
 (16310003), <a href="/web/20180712205445/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0041618&amp;fLockTerm=Ultrasonography">Ultrasonography</a>
 (278292003), <a href="/web/20180712205445/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0183521&amp;fLockTerm=Vascular+stent">Vascular stent</a>
 (360042007), <a href="/web/20180712205445/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C2923055&amp;fLockTerm=Video+assisted+thoracoscopy">Video assisted thoracoscopy</a>
 (449201002), <a href="/web/20180712205445/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0042670&amp;fLockTerm=Vinblastine">Vinblastine</a>
 (12436009), <a href="/web/20180712205445/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0042670&amp;fLockTerm=Vinblastine">Vinblastine</a>
 (387051009), <a href="/web/20180712205445/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0078257&amp;fLockTerm=Vinorelbine">Vinorelbine</a>
 (108792008), <a href="/web/20180712205445/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0078257&amp;fLockTerm=Vinorelbine">Vinorelbine</a>
 (372541004)                    </div>
                    <!-- /.field-content -->
                </div>
                <!-- /.field -->
                <div class="field">
                    <h5 class="field-label">SPN</h5>
                    <div class="field-content">
<a href="/web/20180712205445/https://www.guideline.gov/search?f_SPN_CUI=C0179432&amp;fLockTerm=BRONCHOSCOPE+(FLEXIBLE+OR+RIGID)">BRONCHOSCOPE (FLEXIBLE OR RIGID)</a>
, <a href="/web/20180712205445/https://www.guideline.gov/search?f_SPN_CUI=C0181792&amp;fLockTerm=MEDIASTINOSCOPE%2c+DIAGNOSTIC">MEDIASTINOSCOPE, DIAGNOSTIC</a>
, <a href="/web/20180712205445/https://www.guideline.gov/search?f_SPN_CUI=C0302622&amp;fLockTerm=SYSTEM%2c+IMAGING%2c+PULSED+DOPPLER%2c+ULTRASONIC">SYSTEM, IMAGING, PULSED DOPPLER, ULTRASONIC</a>
, <a href="/web/20180712205445/https://www.guideline.gov/search?f_SPN_CUI=C0182349&amp;fLockTerm=SYSTEM%2c+TOMOGRAPHY%2c+COMPUTED%2c+EMISSION">SYSTEM, TOMOGRAPHY, COMPUTED, EMISSION</a>
, <a href="/web/20180712205445/https://www.guideline.gov/search?f_SPN_CUI=C0936234&amp;fLockTerm=SYSTEM%2c+X-RAY%2c+TOMOGRAPHY%2c+COMPUTED">SYSTEM, X-RAY, TOMOGRAPHY, COMPUTED</a>
                    </div>
                    <!-- /.field-content -->
                </div>
