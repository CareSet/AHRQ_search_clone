 (81073007), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0021603&amp;fLockTerm=Disorders+of+initiating+and+maintaining+sleep">Disorders of initiating and maintaining sleep</a>
 (194437008), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0013085&amp;fLockTerm=Doxepin">Doxepin</a>
 (11841005), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0013085&amp;fLockTerm=Doxepin">Doxepin</a>
 (372587005), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0013216&amp;fLockTerm=Drug+therapy">Drug therapy</a>
 (416608005), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C1436328&amp;fLockTerm=Eszopiclone">Eszopiclone</a>
 (409420000), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C1436328&amp;fLockTerm=Eszopiclone">Eszopiclone</a>
 (409421001), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0917801&amp;fLockTerm=Insomnia">Insomnia</a>
 (193462001), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0025219&amp;fLockTerm=Melatonin">Melatonin</a>
 (116523008), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0025219&amp;fLockTerm=Melatonin">Melatonin</a>
 (41199001), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C1565316&amp;fLockTerm=Ramelteon">Ramelteon</a>
 (419588002), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C1565316&amp;fLockTerm=Ramelteon">Ramelteon</a>
 (419878007), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C3179535&amp;fLockTerm=Suvorexant">Suvorexant</a>
 (708714001), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C3179535&amp;fLockTerm=Suvorexant">Suvorexant</a>
 (715609002), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0039468&amp;fLockTerm=Temazepam">Temazepam</a>
 (387300007), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0039468&amp;fLockTerm=Temazepam">Temazepam</a>
 (54705000), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0068897&amp;fLockTerm=Tiagabine">Tiagabine</a>
 (108403006), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0068897&amp;fLockTerm=Tiagabine">Tiagabine</a>
 (372485004), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0040805&amp;fLockTerm=Trazodone">Trazodone</a>
 (372829000), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0040805&amp;fLockTerm=Trazodone">Trazodone</a>
 (7336002), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0040879&amp;fLockTerm=Triazolam">Triazolam</a>
 (111128007), <a href="/web/20180712184239/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0040879&amp;fLockTerm=Triazolam">Triazolam</a>
