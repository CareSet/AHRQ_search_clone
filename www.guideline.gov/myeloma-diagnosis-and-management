 (87233003), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0024485&amp;fLockTerm=Magnetic+resonance+imaging">Magnetic resonance imaging</a>
 (113091000), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0024485&amp;fLockTerm=Magnetic+resonance+imaging">Magnetic resonance imaging</a>
 (312250003), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0336660&amp;fLockTerm=Magnetic+resonance+imaging+unit">Magnetic resonance imaging unit</a>
 (90003000), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0025241&amp;fLockTerm=Melphalan">Melphalan</a>
 (387297002), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0025241&amp;fLockTerm=Melphalan">Melphalan</a>
 (544002), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0026764&amp;fLockTerm=Multiple+myeloma">Multiple myeloma</a>
 (109989006), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0026764&amp;fLockTerm=Multiple+myeloma">Multiple myeloma</a>
 (55921005), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0524850&amp;fLockTerm=Operation+on+nervous+system">Operation on nervous system</a>
 (16545005), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0002766&amp;fLockTerm=Pain+management">Pain management</a>
 (278414003), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0023484&amp;fLockTerm=Plasma+cell+leukemia">Plasma cell leukemia</a>
 (128922003), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0023484&amp;fLockTerm=Plasma+cell+leukemia">Plasma cell leukemia</a>
 (95210003), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0358314&amp;fLockTerm=Pneumococcal+vaccine">Pneumococcal vaccine</a>
 (333598008), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0358314&amp;fLockTerm=Pneumococcal+vaccine">Pneumococcal vaccine</a>
 (398730001), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C2347624&amp;fLockTerm=Pomalidomide">Pomalidomide</a>
 (703789000), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C2347624&amp;fLockTerm=Pomalidomide">Pomalidomide</a>
 (703790009), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0032743&amp;fLockTerm=Positron+emission+tomography">Positron emission tomography</a>
 (363678002), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0032743&amp;fLockTerm=Positron+emission+tomography">Positron emission tomography</a>
 (82918005), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C1443643&amp;fLockTerm=Proteasome+inhibitor">Proteasome inhibitor</a>
 (409217006), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C1443643&amp;fLockTerm=Proteasome+inhibitor">Proteasome inhibitor</a>
 (409218001), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C1522449&amp;fLockTerm=Radiation+oncology+AND%2fOR+radiotherapy">Radiation oncology AND/OR radiotherapy</a>
 (108290001), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C1522449&amp;fLockTerm=Radiation+oncology+AND%2fOR+radiotherapy">Radiation oncology AND/OR radiotherapy</a>
 (53438000), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0302617&amp;fLockTerm=Radiographic-therapeutic+unit">Radiographic-therapeutic unit</a>
 (10850003), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C1271678&amp;fLockTerm=Serum+immunofixation">Serum immunofixation</a>
 (391555000), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0201720&amp;fLockTerm=Serum+protein+electrophoresis">Serum protein electrophoresis</a>
 (4903000), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0039736&amp;fLockTerm=Thalidomide">Thalidomide</a>
 (404878004), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0039736&amp;fLockTerm=Thalidomide">Thalidomide</a>
 (78702007), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0184925&amp;fLockTerm=Trephine+biopsy">Trephine biopsy</a>
 (50590007), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C1997417&amp;fLockTerm=X-ray+skeletal+survey+for+multiple+myeloma">X-ray skeletal survey for multiple myeloma</a>
 (429646003), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0257685&amp;fLockTerm=Zoledronic+acid">Zoledronic acid</a>
 (134600006), <a href="/web/20180712165505/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0257685&amp;fLockTerm=Zoledronic+acid">Zoledronic acid</a>
 (395926009)                    </div>
                    <!-- /.field-content -->
                </div>
