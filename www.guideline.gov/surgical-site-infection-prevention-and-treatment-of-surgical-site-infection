 (18949003), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0008196&amp;fLockTerm=Chlorhexidine">Chlorhexidine</a>
 (373568007), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0008196&amp;fLockTerm=Chlorhexidine">Chlorhexidine</a>
 (96316004), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0455099&amp;fLockTerm=Cleaning+wound">Cleaning wound</a>
 (225150002), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C1512171&amp;fLockTerm=Education+of+caregiver">Education of caregiver</a>
 (460617003), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0019868&amp;fLockTerm=Homeostasis">Homeostasis</a>
 (21979002), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0021968&amp;fLockTerm=Iodine">Iodine</a>
 (325330005), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0021968&amp;fLockTerm=Iodine">Iodine</a>
 (44588005), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0013119&amp;fLockTerm=Medical+dressing">Medical dressing</a>
 (333453004), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0564678&amp;fLockTerm=Nail+care+activities">Nail care activities</a>
 (286855007), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0184633&amp;fLockTerm=Oxygen+therapy">Oxygen therapy</a>
 (57485005), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0030688&amp;fLockTerm=Patient+education">Patient education</a>
 (311401005), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0031001&amp;fLockTerm=Perfusion+-+action">Perfusion - action</a>
 (129331004), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0031001&amp;fLockTerm=Perfusion+-+action">Perfusion - action</a>
 (88058003), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0392618&amp;fLockTerm=Postoperative+infection">Postoperative infection</a>
 (33910007), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0038941&amp;fLockTerm=Postoperative+wound+infection">Postoperative wound infection</a>
 (433202001), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0038941&amp;fLockTerm=Postoperative+wound+infection">Postoperative wound infection</a>
 (58126003), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0033061&amp;fLockTerm=Preoperative+care">Preoperative care</a>
 (133898004), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0180511&amp;fLockTerm=Surgical+drapes">Surgical drapes</a>
 (65105002), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0017682&amp;fLockTerm=Surgical+glove">Surgical glove</a>
 (706143009), <a href="/web/20180713072328/https://www.guideline.gov/search?f_SNOMEDCT_US_CUI=C0886052&amp;fLockTerm=Wound+care">Wound care</a>
 (225358003)                    </div>
                    <!-- /.field-content -->
                </div>
